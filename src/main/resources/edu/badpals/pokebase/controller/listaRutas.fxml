<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.badpals.pokebase.controller.ControllerListaRutas">
   <HBox prefHeight="3.0" prefWidth="560.0" spacing="15.0">
      <children>
         <Button fx:id="btnVolver" mnemonicParsing="false"  text="Volver" />
         <Button fx:id="btnMenuPrincipal" mnemonicParsing="false" text="Ir al Menú principal" />
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="btnLimpiar" text="Limpiar" />
         <Button fx:id="btnExportar" onAction="#exportar" text="Exportar JSON" />
      </children>
   </HBox>
   <Label text="LISTA DE RUTAS" />
   <HBox alignment="CENTER" spacing="10.0">
      <Label text="Pokemon" />
      <TextField fx:id="txtPokemon" />
      <Label text="Región" />
      <ComboBox fx:id="cmbRegion" />
      <ComboBox fx:id="cmbCriterio" />
      <ComboBox fx:id="cmbOrden" />
      <Button fx:id="btnFiltrarRutas" onAction="#refiltrarRutas" text="Buscar" />
   </HBox>
   <ListView fx:id="listaRutas" maxHeight="250.0" maxWidth="300.0" onMouseClicked="#activateBotonBuscar" />
   <Button fx:id="btnBuscarRuta" disable="true" onAction="#showRuta" text="Buscar Ruta" />
   <Button onAction="#volverAlInicio" text="Volver Al Menú Principal" />
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
